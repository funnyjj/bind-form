{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "strictFunctionTypes":true,
        "target":"es6",
        "jsx": "react",
        "allowJs":true,
        "module":"esnext",
        "moduleResolution": "node",
        "baseUrl":".",
        "paths": {
        },
        "allowSyntheticDefaultImports":true,
        "lib": [
            "es2016",
            "dom",
            "es5"
        ]

    },
    "include": [
        "./src/**/*",
        "./packages/"
    ],
    "exclude": [
        "build",
        "static",
        "cmd",
        "config",
        "server"
    ]
}